<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style/style.css">
</head>

<body>
    <h1>Hello FSW1 tercinta</h1>
    <% if (message !="" ) { %>
        <div class="alert">
            Data Berhasil <%= message %>
        </div>
        <% } %>
            <table>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>City</th>
                <th>Email</th>
                <th>createdAt</th>
                <th>Action</th>
                <% customers.map((customer)=> { %>
                    <tr>
                        <td>
                            <%= customer.id %>
                        </td>
                        <td>
                            <%= customer.name %>
                        </td>
                        <td>
                            <%= customer.age %>
                        </td>
                        <td>
                            <%= customer.city %>
                        </td>
                        <td>
                            <%= customer.email %>
                        </td>
                        <td>
                            <%= customer.createdAt %>
                        </td>
                        <td>
                            <a href="/customers/edit/<%= customer.id %>">
                                <button>Edit</button>
                            </a>
                            <form action="/customers/admin/delete/<%= customer.id %>">
                                <button>Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </table>
            <a href="/customers/create">
                <button>Tambah Customer Baru</button>
            </a>
</body>

</html>